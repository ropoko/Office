@model IEnumerable<Office.Models.Produto>

@{
    Layout = "_HeaderFooter";
    var fotos = TempData["Fotos"] as string[];
}

<div class="container-fluid">
    <div class="col-md-12">
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                @{ int i = 0; }
                @foreach (var item in fotos)
                {
                    i++;

                    @if (i > 0)
                    {
                        <div class="carousel-item active">
                            <img class="imgSlide" src="@Url.Content("~/img/home/" + item)" />
                        </div>

                        i = -787;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="imgSlide" src="@Url.Content("~/img/home/" + item)" />
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <div class="py-5">
        <div class="container">
            <div class="row text-center">
                <!-- cards -->
                @{ int a = 0; }
                @foreach (var item in Model)
                {
                    a++;

                    if (a > 4)
                    {
                        break;
                    }

                    <div class="col-sm-3">
                        <div class="card mb-3 shadow-sm d-inline-flex">
                            <div class="card-top">
                                <img src="@Url.Content(item.Foto)" class="card-img-top img-card" />
                            </div>
                            <div class="card-body">
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                            </div>
                            <a asp-action="UserDetails" asp-controller="Produtos" asp-route-id="@item.IDProduto" class="btn btn-sm botao-visualizar"> Visualizar </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section styles {
    <link rel="stylesheet" href="~/Home/css/index.css" />
}