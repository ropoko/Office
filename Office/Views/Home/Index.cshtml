@model IEnumerable<Office.Models.Produto>

@{
    Layout = "_HeaderFooter";
    var fotos = TempData["Fotos"] as string[];
}

<div id="DivSlide" class="text-center">
    <div class="offset-1"></div>
    <div class="col-md-12 container-carousel">
        <div id="carousel" class="carousel slide carousel-fade d-md-block d-sm-block d-lg-block" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                @{ int i = 0; }
                @foreach (var item in fotos)
                {
                    i++;

                    @if (i > 0)
                    {
                        <div class="carousel-item active">
                            <img id="imgSlide1" src="@Url.Content("~/img/home/" + item)" class="d-block w-100">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>

                        i = -787;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img id="imgSlide1" src="@Url.Content("~/img/home/" + item)" class="d-block w-100">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="offset-1"></div>
</div>

<div class="py-5">
    <div class="container">
        <div class="row text-center">
            <!-- cards -->
            @{ int a = 0; }
            @foreach (var item in Model)
            {
                a++;

                if (a > 4)
                {
                    break;
                }

                <div class="col-md-3">
                    <div class="card py-0 shadow-sm" id="card1">
                        <div class="card-top" id="CardImg">
                            <img src="@Url.Content(item.Foto)" class="responsive" img="imgCard">
                        </div>
                        <div class="card-body" id="CardBody1">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                        </div>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <a asp-action="AdmDetails" asp-controller="Produtos" asp-route-id="@item.IDProduto" class="btn btn-sm botao-visualizar"> Visualizar </a>
                        }
                        else
                        {
                            <a asp-action="UserDetails" asp-controller="Produtos" asp-route-id="@item.IDProduto" class="btn btn-sm botao-visualizar"> Visualizar </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
